[
  {
    "context": "VimControl && !menu || EmptyPane || SharedScreen",
    "bindings": {
      "space space": "file_finder::Toggle",
      "space e": "project_panel::Open",
      "space E": "pane::RevealInProjectPanel",
      "space t": "workspace::NewTerminal",
      "space T": "workspace::OpenInTerminal"
    }
  },
  {
    "context": "VimControl && !menu",
    "bindings": {
      // put key-bindings here if you want them to work in normal & visual mode

      "space r n": "editor::Rename",
      "space f m": "editor::Format",
      "g d": "editor::GoToDefinition",
      "g shift-d": "editor::GoToTypeDefinition",
      "g shift-i": "editor::GoToImplementation",

      "shift-h": null,
      "shift-m": null,
      "shift-l": null
    }
  },
  {
    "context": "VimControl && !menu && vim_mode == normal",
    "bindings": {
      "s": "editor::AddSelectionBelow",
      "S": "editor::SelectAllMatches"
    }
  },
  {
    "context": "VimControl && !menu && vim_mode == normal",
    "bindings": {
      "n": ["workspace::SendKeystrokes", "n z z"],
      "shift-n": ["workspace::SendKeystrokes", "N z z"]
    }
  },
  {
    "context": "vim_mode == normal && !menu",
    "bindings": {
      "shift-y": ["workspace::SendKeystrokes", "y $"]
    }
  },
  {
    "context": "VimControl && !menu && vim_mode == visual",
    "bindings": {
      "s": "editor::SelectNext",
      "S": "editor::SplitSelectionIntoLines"
    }
  },
  {
    "context": "VimControl && !menu || Dock",
    "bindings": {
      "ctrl-w h": ["workspace::ActivatePaneInDirection", "Left"],
      "ctrl-w l": ["workspace::ActivatePaneInDirection", "Right"],
      "ctrl-w k": ["workspace::ActivatePaneInDirection", "Up"],
      "ctrl-w j": ["workspace::ActivatePaneInDirection", "Down"]
    }
  },
  {
    "context": "EmptyPane || SharedScreen",
    "bindings": {
      // put key-bindings here (in addition to above) if you want them to
      // work when no editor exists
    }
  }
]
